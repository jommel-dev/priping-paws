rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
		match /{document=**} {
      allow read, write: if true;
    }
    
    match /userPets/{userId} {
      // Allow read/write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /transactions/{userId} {
      // Allow read/write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Match the user's profile
    match /userProfile/{userId} {
      // Allow read/write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /announcements/{userId} {
      // Allow read/write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /petSchedule/{userId} {
      // Allow read/write only if the authenticated user's ID matches the userId in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}